<idea-plugin>
    <id>de.joachimsohn.CDS-Language-Support</id>
    <name>CAP CDS-Language Support</name>
    <vendor email="CDSPlugin@gmail.com" url="https://github.com/TheYaINN/CDS-Plugin">Bengt Joachimsohn</vendor>
    <idea-version since-build="213"/>

    <description><![CDATA[
    A simple Plugin for CDS Highlighting and syntax checking to improve readability in the editor.
    See README for further information.
    ]]>
    </description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <lang.parserDefinition language="Cds" implementationClass="de.joachimsohn.language.CDSParserDefinition"/>
        <fileType name="Cds File" implementationClass="de.joachimsohn.language.psi.CDSFileType"
                  fieldName="INSTANCE" language="Cds" extensions="cds"/>
        <colorSettingsPage implementation="de.joachimsohn.language.CDSColorSettingsPage"/>
        <lang.syntaxHighlighterFactory language="Cds"
                                       implementationClass="de.joachimsohn.language.CDSSyntaxHighlighterFactory"/>
    </extensions>

    <actions>
    </actions>
</idea-plugin>